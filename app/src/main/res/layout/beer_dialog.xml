<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	android:layout_height="wrap_content"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_gravity="center_vertical">
	<LinearLayout
		android:orientation="vertical"
		android:layout_gravity="center_vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/beer_dialog__name"
			android:gravity="center_horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="30sp"
			android:layout_marginTop="5sp"
			android:layout_marginBottom="5sp"
			/>

		<ProgressBar
			android:id="@+id/beer_dialog__spinner"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>

		<ImageView
			android:id="@+id/beer_dialog__image"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:contentDescription="@string/beer_image"
			android:layout_marginTop="20sp"
			android:layout_marginBottom="20sp"
			/>

		<TextView
			android:id="@+id/beer_dialog__description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="15sp"
			/>

		<Button
			android:id="@+id/beer_dialog_dismiss_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginRight="50sp"
			android:layout_marginLeft="50sp"
			android:layout_marginBottom="25sp"
			android:text="@string/beer_dialog_dismiss_button_text"
			/>

	</LinearLayout>
</ScrollView>