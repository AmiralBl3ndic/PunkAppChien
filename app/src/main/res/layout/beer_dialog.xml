<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:fillViewport="true"
	android:padding="0sp"
	>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingVertical="10sp"
		android:background="@color/colorPrimary"
		android:layout_margin="0sp">

		<TextView
			android:id="@+id/beer_dialog__name"
			android:textAlignment="center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="30sp"
			android:textColor="@color/colorWhite"
			android:paddingHorizontal="5sp"
			/>

		<ProgressBar
			android:id="@+id/beer_dialog__spinner"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>

		<ImageView
			android:id="@+id/beer_dialog__image"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:contentDescription="@string/beer_image"
			android:layout_marginTop="20sp"
			android:layout_marginBottom="20sp"
			/>

		<TextView
			android:id="@+id/beer_dialog__description"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/colorWhite"
			android:textSize="15sp"
			android:padding="15sp"
			/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:orientation="vertical">
			
			<Button
				android:id="@+id/beer_dialog_more_details_button"
				android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
				android:layout_width="match_parent"
				android:minWidth="1000sp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="50sp"
				android:layout_marginBottom="15sp"
				android:text="@string/more_details"
				android:background="@color/colorPrimaryDark"
				android:textColor="@color/colorWhite"
				/>
			
			<Button
				android:id="@+id/beer_dialog_add_favourite_button"
				android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
				android:layout_width="match_parent"
				android:minWidth="1000sp"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="50sp"
				android:layout_marginBottom="30sp"
				android:text="@string/add_to_favourites"
				android:background="@color/colorPrimary"
				android:textColor="@color/colorWhite"
				/>
			
			<Button
				android:id="@+id/beer_dialog_dismiss_button"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="50sp"
				android:background="@color/colorAccent"
				android:textColor="@color/colorWhite"
				android:text="@string/beer_dialog_dismiss_button_text"
				/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>